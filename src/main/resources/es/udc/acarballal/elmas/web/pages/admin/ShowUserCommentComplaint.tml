<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
	t:type="Layout" t:pageTitle="${message:title}">
	
	<t:if t:test="userCommentComplaints.empty">

		<p>${message:noUserCommentComplaints}.</p>
		<p>
			<a href="#" t:type="PageLink" page="admin/Reports">
				${message:return}		    	
	    	</a>
		</p>
		
	<t:parameter name="else">

	<table class="comments">
		<tr t:type="Loop" t:source="userCommentComplaints" t:value="userCommentComplaint">
			<tr>
				<td class="user-comment">${userCommentComplaint.reference.comment}</td>
			</tr>
			<tr><td class="commentator-info">
				${message:user-header}: ${userCommentComplaint.reference.commentator.loginName}
			 - 
				${message:date}: <t:output value="userCommentComplaint.reference.date.time" format="dateFormat"/>
			 - 
			 <a href="#" t:type="PageLink" page="admin/DeleteUserComment"
		    		context="userCommentComplaint.reference.commentId">
					${message:acceptComplaint}		    	
	    		</a>
	    	 | 
	    		<a href="#" t:type="PageLink" page="admin/DeleteUserCommentComplaint"
		    		context="userCommentComplaint.complaintId">
		    		${message:rejectComplaint}
	    		</a>
			</td></tr>
		</tr>
        	
	</table>
</t:parameter>
</t:if>

		
	<!-- "Previous" and "Next" links. -->
		
	<div class="previousNextLinks">
	<span class="previousLink">
		<t:if t:test="previousLinkContext">
			<a href="#" t:type="PageLink" page="admin/ShowUserCommentComplaint"
	    		context="previousLinkContext">
	    		${message:link-previous}
	    	</a>
		</t:if>
	</span>
	<span class="nextLink">
		<t:if t:test="nextLinkContext">
			<a href="#" t:type="PageLink" page="admin/ShowUserCommentComplaint"
	    		context="nextLinkContext">
	    		${message:link-next}
	    	</a>
		</t:if>
	</span>
	</div>
	

   
</html>	
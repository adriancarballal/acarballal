<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
	t:type="Layout" t:pageTitle="${message:title}">

<t:if t:test="foundVideo">
	<p>${message:videoNotFound}.</p>
	<t:parameter name="else">
		<table class="showvideo">
			<tr><td>${video.title}</td></tr>
			<tr><td>${video.userProfile.loginName}</td></tr>
			<tr>
				<td><t:output value="video.date.time" format="dateFormat" /></td>
			</tr>
			<tr><td>${video.comment}</td></tr>
			<tr>
				<td><script type="text/javascript"
					src="${asset:context:/player/swfobject.js}"></script> <embed
					src="${asset:context:/player/player.swf}" width="244" height="210"
					allowfullscreen="false" /></td>
			</tr>
			<t:if t:test="userSessionExists">
				<tr>
					<td><a href="#" t:type="PageLink" page="ShowVideoComments"
						context="video.videoId"> ${message:showVideoComments} </a> | <a
						href="#" t:type="PageLink" page="ShowUserComments"
						context="video.userProfile.userProfileId"> ${message:showUserComments} </a></td>
				</tr>
				<tr>
					<td>
					<t:zone t:id="complaintZone">
						<t:actionLink t:id="complaint" zone="complaintZone" context="video.videoId">
							${message:complaintVideo}</t:actionLink>
					</t:zone>
					<t:block t:id="alreadyComplaint">
						${message:alreadyComplaint}
					</t:block>
					</td>
				</tr>
			</t:if>

		</table>

	</t:parameter>
</t:if>


</html>

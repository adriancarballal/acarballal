<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
	t:type="Layout" t:pageTitle="${message:title}">
	
	<p>
		<a href="#" t:type="PageLink" t:page="user/ChangePassword">${message:changePassword}</a>		       
	</p>

	<form t:type="Form" t:id="updateProfileForm">
	   <t:errors/>

	   <div class="field">        
	        <t:label t:for="firstName"/>
	        <span class="entry">    
	            <input type="text" t:id="firstName" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	   
	   <div class="field">        
	        <t:label t:for="lastName"/>
	        <span class="entry">    
	            <input type="text" t:id="lastName" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	   
	   <div class="field">        
	        <t:label t:for="email"/>
	        <span class="entry">    
	            <input type="text" t:id="email" t:type="TextField"
				       t:validate="regexp" 
				       size="16" maxlength="30" />
	        </span>
	   </div>
	    
	    <div class="button">
	        <input type="submit" value="${message:submit}"/>        
	    </div>
	    
	</form>

</html>
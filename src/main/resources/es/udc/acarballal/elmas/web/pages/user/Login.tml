<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
	t:type="Layout" t:pageTitle="${message:title}">

	<p>
		<a href="#" t:type="PageLink" t:page="user/Register">${message:register}</a>		       
	</p>

	<form t:type="Form" t:id="loginForm">
	
	   <t:errors/>
		
	   <div class="field">        
	        <t:label t:for="loginName"/>
	        <span class="entry">    
	            <input type="text" t:id="loginName" t:type="TextField"
				       t:validate="required" 
				       size="16" maxlength="15" />
	        </span>
	   </div>
	    
	   <div class="field">        
	        <t:label t:for="password"/>
	        <span class="entry">
	            <input type="text" t:id="password" t:type="PasswordField"
				       t:validate="required" 
	                   size="16" maxlength="8"/>
	        </span>
	    </div>
	    
	    <div class="field">
            <t:label t:for="rememberMyPassword"/>
	        <span class="entry">    
	            <input type="checkbox" t:type="Checkbox" t:id="rememberMyPassword" /> 
	        </span>
	    </div>
	    
	    <div class="button">
	        <input type="submit" value="${message:submit}"/>        
	    </div>
	    
	</form>
	
</html>
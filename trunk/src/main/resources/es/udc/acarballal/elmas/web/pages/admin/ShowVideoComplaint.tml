<html xmlns:t="http://tapestry.apache.org/schema/tapestry_5_0_0.xsd"
	t:type="Layout" t:pageTitle="${message:title}">
	
	<t:if t:test="videoComplaintExists">
		<p>${message:videoComplaintNotFound}.</p>
		<p>
			<a href="#" t:type="PageLink" page="admin/Reports">
				${message:return}		    	
	    	</a>
		</p>
	<t:parameter name="else">
		<table class="showvideo">
			<tr><td>
				${video.title}
			</td></tr>
			<tr><td>
				${video.userProfile.loginName}
			</td></tr>
			<tr><td>
				<t:output value="video.date.time" format="dateFormat"/>
			</td></tr>
			<tr><td>
				${video.comment}
			</td></tr>
			<tr><td>
				<script type="text/javascript" src="${asset:context:/player/swfobject.js}"></script>
				<embed src ="${asset:context:/player/player.swf}" 
				width="244" height="210" 
				allowfullscreen="false" />
			</td></tr>
			<tr><td>
				<a href="#" t:type="PageLink" page="admin/DeleteVideo"
		    		context="video.videoId">
					${message:acceptComplaint}		    	
	    		</a>
	    		 | 
	    		<a href="#" t:type="PageLink" page="admin/DeleteVideoComplaint"
		    		context="videoComplaint.complaintId">
		    		${message:rejectComplaint}
	    		</a>
			</td></tr>
		</table>
	</t:parameter>
	</t:if>
</html>	